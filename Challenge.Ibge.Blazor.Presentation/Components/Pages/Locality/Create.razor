@page "/locality/create"
@inject ApplicationDbContext Context
@inject NavigationManager Navigation
@rendermode InteractiveServer
@attribute [Authorize]

<h1> Create New Locality </h1>
<EditForm Model="@Model" OnValidSubmit="OnValidSubmitAsync">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label"> Acronym of State </label>
        <InputText @bind-Value="Model.State" class="form-control" />
        <ValidationMessage For="@(() => Model.State)" />
    </div>

    <div class="mb-3">
        <label class="form-label"> Name of City </label>
        <InputText @bind-Value="Model.City" class="form-control" />
        <ValidationMessage For="@(() => Model.City)" />
    </div>

    <button type="submit" class="btn btn-primary"> Create </button>
    <a href="/locality"> Cancel </a>
</EditForm>


@code {
    public Locality Model { get; set; } = new();

    public async Task OnValidSubmitAsync()
    {
        await Context.Localities.AddAsync(Model);
        await Context.SaveChangesAsync();
        Navigation.NavigateTo("locality");
    }
}